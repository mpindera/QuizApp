<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizAppGame"
        tools:targetApi="31">
        <activity
            android:name=".user.panel.MainPanelUser"
            android:exported="false" />
        <activity
            android:name=".user.panel.QuestionActivityUser"
            android:exported="false" />
        <activity
            android:name=".admin.panel.QuestionActivity"
            android:exported="false" />
        <activity
            android:name=".account.login.LoginActivity"
            android:exported="true"
            android:theme="@style/AppBarStyle1" />
        <activity
            android:name=".account.login.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".admin.panel.MainAdminPanel"
            android:exported="true" />
        <activity
            android:name=".account.login.MainActivity"
            android:exported="true"
            android:theme="@style/AppBarStyle1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>